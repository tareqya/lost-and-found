<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:id="@+id/lost_IV_remove"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="invisible"
               android:src="@drawable/ic_baseline_close_24"
               />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lost_TV_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:text="Post title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lost_BTN_openInMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Open in map"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/price"
                    app:icon="@drawable/ic_baseline_location_on_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lost_BTN_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Call"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/price"
                    app:icon="@drawable/ic_baseline_call_24" />

                <TextView
                    android:id="@+id/lost_TV_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Test"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/lost_IV_postImage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/attach"
                />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
